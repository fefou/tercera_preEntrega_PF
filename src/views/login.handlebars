<h2>Login Usuarios</h2>
<hr>

<form action="/api/sessions/login" method="post">

{{#if error}}
    <div style="color: red;">{{error}}</div>
    {{/if}}

    {{#if mensaje}}
    <div style="color: green;">{{mensaje}}</div>
    {{/if}}

    <input type="email" name="email" placeholder="email">
    <input type="password" name="password" placeholder="password">
    <input type="submit" value="Ingresar">
</form>

<button onclick="location.href='/register'" type="button">Registrar</button>

<a href="/api/sessions/github">Acceso con GitHub</a>